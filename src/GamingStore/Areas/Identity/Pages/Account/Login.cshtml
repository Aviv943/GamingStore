@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="row">
    <div class="col-md-12">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group d-flex justify-content-around">
                    <button type="submit" class="btn btn-primary">Log in</button>
                    <input type="submit" value="Register" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-light">
                </div>
                <hr />
                <div class="form-group">
                    <section>
                        <h6 class="text-secondary text-center">Or use another service to log in</h6>
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div class="d-flex justify-content-around">
                                <p>
                                    <button type="submit" class="fa fa-facebook" name="provider" value="Facebook" title="Log in using your Facebook account" style=" padding: 10px; text-align: center; text-decoration: none; background: #3B5998; color: white;"></button>
                                    <button type="submit" class="fa fa-google" name="provider" value="Google" title="Log in using your Google account" style=" padding: 10px; text-align: center; text-decoration: none; background: #dd4b39; color: white;"></button>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
                <hr />
                <div class="d-flex justify-content-center">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
