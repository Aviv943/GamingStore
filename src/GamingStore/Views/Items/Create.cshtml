@model GamingStore.ViewModels.CreateEditItemViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>

<h4>Item</h4>
<hr />
<div class="column">
    <form asp-action="Create" enctype="multipart/form-data" class="row">
        <div class="col-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Item.Title" class="control-label"></label>
                <input asp-for="Item.Title" class="form-control" required/>
                <span asp-validation-for="Item.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Description" class="control-label"></label>
                <input asp-for="Item.Description" class="form-control" required />
                <span asp-validation-for="Item.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Manufacturer" class="control-label"></label>
                <input asp-for="Item.Manufacturer" class="form-control" required />
                <span asp-validation-for="Item.Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Price" class="control-label"></label>
                <input asp-for="Item.Price" class="form-control" required />
                <span asp-validation-for="Item.Price" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom:7%">
                <label asp-for="Item.Category" class="control-label"></label>
                <input asp-for="Item.Category" class="form-control" id="tags" required />
                <span asp-validation-for="Item.Category" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-5" style="padding-bottom: 3%">
            <label class="control-label">Images</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon01">Image</span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" name="file1" id="file1" aria-describedby="inputGroupFileAddon01" required>
                    <label class="custom-file-label" for="file1">Choose Primary Image</label>
                </div>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon02">Image</span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" name="file2" id="file2" aria-describedby="inputGroupFileAddon01" required>
                    <label class="custom-file-label" for="file2">Choose 2nd Image</label>
                </div>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon03">Image</span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" name="file3" id="file3" aria-describedby="inputGroupFileAddon01" required>
                    <label class="custom-file-label" for="file3">Choose 3rd Image</label>
                </div>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" asp-for="PublishItemFlag">
                <label class="form-check-label">Publish On Twitter</label>
            </div>
            <div class="input-group d-flex justify-content-center" style="margin-top: 10%;">
                <input type="submit" value="Create Item" class="btn btn-primary"/>
            </div>
        </div>
    </form>
</div>

@section scripts{
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        //todo: switch with category dropdown and remove afterwards.
        //todo: remove old jQuery with our jQuery lib.
        $(function () {
            var myArray = [];

            @{
                foreach (var d in Model.Categories)
                {
                    @:myArray.push("@d");
                }
            }

            var availableTags = myArray;
            $("#tags").autocomplete({
                source: availableTags
            });
        });
    </script>
}

