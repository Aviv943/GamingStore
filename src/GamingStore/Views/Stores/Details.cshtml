@model GamingStore.ViewModels.StoreDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Store</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Store.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Store.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Store.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store.Address)
        </dt>
        <dd class="col-sm-10">
            @{
                var formattedAddress = Model.Store.Address.ToString();}
            @Html.DisplayFor(model => formattedAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Store.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Store.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store.OpeningHours)
        </dt>
        <dd class="col-sm-10">
            <table class="opening_hours">
                <tr>
                    @{
                        foreach (var day in Model.Store.OpeningHours)
                        {
                            <th style="padding: 1%"> @day.DayOfWeek.ToString().Substring(0, 3)</th>
                        }
                    }
                </tr>
                <tr>
                    @{
                        foreach (var day in Model.Store.OpeningHours)
                        {
                            <td style="padding: 1%">
                                <span>
                                    @($"{day.OpeningTime:hh\\:mm}")
                                </span>
                                <span>
                                    @($"{day.ClosingTime:hh\\:mm}")
                                </span>
                            </td>
                        }
                    }
                </tr>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Store.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
