@model IEnumerable<GamingStore.Models.Store>

@{
    ViewData["Title"] = "Admin Stores";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-controller="Stores">Create a New Store</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpeningHours)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Store store in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => store.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => store.Name)
                </td>
                <td>
                    @{ var formattedAddress = store.Address.ToString();}
                    @Html.DisplayFor(modelItem => formattedAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => store.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => store.Active)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => store.PhoneNumber)
                </td>
                <td>
                    <table class="opening_hours">
                        <tr>
                            @{
                                foreach (var day in store.OpeningHours)
                                {
                                    <th> @day.DayOfWeek.ToString().Substring(0, 3)</th>
                                }
                            }
                        </tr>
                        <tr>
                            @{
                                foreach (var day in store.OpeningHours)
                                {
                                    <td>
                                        <span>
                                            @($"{day.OpeningTime:hh\\:mm}")
                                        </span>
                                        <span>
                                            @($"{day.ClosingTime:hh\\:mm}")
                                        </span>
                                    </td>
                                }
                            }
                        </tr>
                    </table>
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Stores" asp-route-id="@store.Id">Edit</a>
                    @{
                        if (store.Orders.Count <= 0)
                        {
                            <a asp-action="Delete" asp-controller="Stores" asp-route-id="@store.Id">Delete</a>
                        }
                    }
                    <a asp-action="Details" asp-controller="Stores" asp-route-id="@store.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
