@using Microsoft.AspNetCore.Identity
@using Microsoft.CodeAnalysis.CSharp.Syntax
@model IEnumerable<Customer>

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>

@if (Model.Any())
{
    var userNum = 0;
    foreach (var user in Model)
    {
        userNum++;
        var userNameString = "user"+userNum; @*adding user number to div*@
        <div class="card mb-3 @userNameString">
            <div class="card-header">
                User Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.Email</h5>
            </div>
            <div class="card-footer">
                    <a asp-controller="Administration" asp-action="Edituser"
                       asp-route-id="@user.Id" class="btn btn-primary">
                        Edit
                    </a>
                    <span id="confirmDeleteSpan_@user.Id" style="display: none">
                        <span>Are you sure you want to delete?</span>
                        <input type="button" onclick="confirmDeleteAjax('@user.Id','@userNum','@user.Email')" class="btn btn-danger" value="Yes">

                        <a href="javascript:void(0)" class="btn btn-primary"
                           onclick="confirmDelete('@user.Id', false)">
                            No
                        </a>
                    </span>
                    <span id="deleteSpan_@user.Id">
                        <a href="javascript:void(0)" class="btn btn-danger"
                           onclick="confirmDelete('@user.Id', true)">
                            Delete
                        </a>
                    </span>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
        </div>
    </div>
}