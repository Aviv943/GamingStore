@using GamingStore.Contracts
@model IEnumerable<GamingStore.Models.Store>

@{
    ViewData["Title"] = "Stores";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}


<head>
    <link rel="stylesheet" type="text/css" href="~/css/store_style.css">
</head>
    <h1>Index</h1>
    @if (User.IsInRole("Admin"))
    {
        <p>
            <a asp-action="Create">Create New</a>
        </p>
    }

    <div class="form-inline">
        <p>
            <input class="form-control mr-sm-2" type="text" placeholder="Search Store" aria-label="Search" name="searchStoreString" id="searchStoreString">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit" id="searchSubmit">Search</button>
        </p>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OpeningHours)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @* todo: add get for address *@
                        @item.Address.ToString()
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <table class="table">
                            <thead>
                                <tr>
                                    @foreach (var openingHourDay in item.OpeningHours)
                                    {
                                        <th>
                                            @openingHourDay.DayOfWeek
                                        </th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    @foreach (var openingHourDay in item.OpeningHours)
                                    {
                                        <td>
                                            @openingHourDay.OpeningTime - @openingHourDay.ClosingTime
                                        </td>
                                    }
                                </tr>
                            </tbody>
                        </table>
                    </td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a><text>|</text>
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a><text>|</text>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
